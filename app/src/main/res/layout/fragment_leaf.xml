<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvDisplay"
        style="@style/tv_display"/>/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:background="@color/black">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glHorizontal_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintGuide_percent=".2"
            android:orientation="horizontal"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glHorizontal_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintGuide_percent=".4"
            android:orientation="horizontal"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glHorizontal_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintGuide_percent=".6"
            android:orientation="horizontal"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glHorizontal_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintGuide_percent=".8"
            android:orientation="horizontal"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glVertical_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintGuide_percent=".25"
            android:orientation="vertical"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glVertical_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintGuide_percent=".5"
            android:orientation="vertical"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glVertical_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintGuide_percent=".75"
            android:orientation="vertical"/>

        <Button
            android:id="@+id/btn_AC"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_green_background"
            android:gravity="center"
            android:text="AC"
            app:layout_constraintBottom_toTopOf="@id/glHorizontal_1"
            app:layout_constraintEnd_toStartOf="@id/glVertical_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_pow"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_green_background"
            android:gravity="center"
            android:text="pow"
            app:layout_constraintBottom_toTopOf="@id/glHorizontal_1"
            app:layout_constraintEnd_toStartOf="@id/glVertical_2"
            app:layout_constraintStart_toStartOf="@id/glVertical_1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_percentage"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_green_background"
            android:gravity="center"
            android:text="%"
            app:layout_constraintBottom_toTopOf="@id/glHorizontal_1"
            app:layout_constraintEnd_toStartOf="@id/glVertical_3"
            app:layout_constraintStart_toStartOf="@id/glVertical_2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_division"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_white_background"
            android:gravity="center"
            android:text="/"
            android:textColor="@color/yellow"
            app:layout_constraintBottom_toTopOf="@id/glHorizontal_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/glVertical_3"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_7"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_gray_background"
            android:gravity="center"
            android:text="7"
            app:layout_constraintBottom_toTopOf="@id/glHorizontal_2"
            app:layout_constraintEnd_toStartOf="@id/glVertical_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/glHorizontal_1" />

        <Button
            android:id="@+id/btn_8"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_gray_background"
            android:gravity="center"
            android:text="8"
            app:layout_constraintBottom_toTopOf="@id/glHorizontal_2"
            app:layout_constraintEnd_toStartOf="@id/glVertical_2"
            app:layout_constraintStart_toStartOf="@id/glVertical_1"
            app:layout_constraintTop_toTopOf="@id/glHorizontal_1" />

        <Button
            android:id="@+id/btn_9"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_gray_background"
            android:gravity="center"
            android:text="9"
            app:layout_constraintBottom_toTopOf="@id/glHorizontal_2"
            app:layout_constraintEnd_toStartOf="@id/glVertical_3"
            app:layout_constraintStart_toStartOf="@id/glVertical_2"
            app:layout_constraintTop_toTopOf="@id/glHorizontal_1" />

        <Button
            android:id="@+id/btn_multiply"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_yellow_background"
            android:gravity="center"
            android:text="*"
            app:layout_constraintBottom_toTopOf="@id/glHorizontal_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/glVertical_3"
            app:layout_constraintTop_toTopOf="@id/glHorizontal_1" />

        <Button
            android:id="@+id/btn_4"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_gray_background"
            android:gravity="center"
            android:text="4"
            app:layout_constraintBottom_toTopOf="@id/glHorizontal_3"
            app:layout_constraintEnd_toStartOf="@id/glVertical_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/glHorizontal_2" />

        <Button
            android:id="@+id/btn_5"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_gray_background"
            android:gravity="center"
            android:text="5"
            app:layout_constraintBottom_toTopOf="@id/glHorizontal_3"
            app:layout_constraintEnd_toStartOf="@id/glVertical_2"
            app:layout_constraintStart_toStartOf="@id/glVertical_1"
            app:layout_constraintTop_toTopOf="@id/glHorizontal_2" />

        <Button
            android:id="@+id/btn_6"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_gray_background"
            android:gravity="center"
            android:text="6"
            app:layout_constraintBottom_toTopOf="@id/glHorizontal_3"
            app:layout_constraintEnd_toStartOf="@id/glVertical_3"
            app:layout_constraintStart_toStartOf="@id/glVertical_2"
            app:layout_constraintTop_toTopOf="@id/glHorizontal_2" />

        <Button
            android:id="@+id/btn_minus"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_yellow_background"
            android:gravity="center"
            android:text="-"
            app:layout_constraintBottom_toTopOf="@id/glHorizontal_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/glVertical_3"
            app:layout_constraintTop_toTopOf="@id/glHorizontal_2" />

        <Button
            android:id="@+id/btn_1"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_gray_background"
            android:gravity="center"
            android:text="1"
            app:layout_constraintBottom_toTopOf="@id/glHorizontal_4"
            app:layout_constraintEnd_toStartOf="@id/glVertical_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/glHorizontal_3" />

        <Button
            android:id="@+id/btn_2"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_gray_background"
            android:gravity="center"
            android:text="2"
            app:layout_constraintBottom_toTopOf="@id/glHorizontal_4"
            app:layout_constraintEnd_toStartOf="@id/glVertical_2"
            app:layout_constraintStart_toStartOf="@id/glVertical_1"
            app:layout_constraintTop_toTopOf="@id/glHorizontal_3" />

        <Button
            android:id="@+id/btn_3"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_gray_background"
            android:gravity="center"
            android:text="3"
            app:layout_constraintBottom_toTopOf="@id/glHorizontal_4"
            app:layout_constraintEnd_toStartOf="@id/glVertical_3"
            app:layout_constraintStart_toStartOf="@id/glVertical_2"
            app:layout_constraintTop_toTopOf="@id/glHorizontal_3" />

        <Button
            android:id="@+id/btn_plus"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_yellow_background"
            android:gravity="center"
            android:text="+"
            app:layout_constraintBottom_toTopOf="@id/glHorizontal_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/glVertical_3"
            app:layout_constraintTop_toTopOf="@id/glHorizontal_3" />

        <Button
            android:id="@+id/btn_0"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_gray_background"
            android:gravity="center"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/glVertical_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/glHorizontal_4" />

        <Button
            android:id="@+id/btn_point"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_gray_background"
            android:gravity="center"
            android:text="."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/glVertical_3"
            app:layout_constraintStart_toStartOf="@id/glVertical_2"
            app:layout_constraintTop_toTopOf="@id/glHorizontal_4" />

        <Button
            android:id="@+id/btn_equals"
            style="@style/rectangle_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/leaf_yellow_background"
            android:gravity="center"
            android:text="="
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/glVertical_3"
            app:layout_constraintTop_toTopOf="@id/glHorizontal_4" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>